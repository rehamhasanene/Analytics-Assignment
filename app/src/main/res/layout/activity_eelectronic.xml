<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/butlaptop"
        android:layout_width="173dp"
        android:layout_height="99dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/shap"
        android:text="Laptop hp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butiphone"
        android:layout_width="173dp"
        android:layout_height="99dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/shap"
        android:text="iphone x"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butlaptop" />

    <Button
        android:id="@+id/butSamart"
        android:layout_width="173dp"
        android:layout_height="99dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/shap"
        android:text="Samart tv"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butiphone" />



</androidx.constraintlayout.widget.ConstraintLayout>